---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import SectionHeading from "../components/SectionHeading.astro";
import Icon from "../components/Icon.astro";
import AppStoreBadge from "../components/AppStoreBadge.astro";
---

<BaseLayout title="Component Showcase — Small Talk Notebook" showAnchors={false}>
  <main class="flex-1 py-16 px-8">
    <div class="max-w-4xl mx-auto">
      <a href="/" class="text-[--color-muted] hover:text-[--color-contrast] transition-colors mb-8 inline-block">
        &larr; Back to home
      </a>

      <h1 class="font-title text-5xl text-[--color-contrast] mb-4">Component Showcase</h1>
      <p class="text-[--color-muted] mb-16">Visual testing page for all design system components.</p>

      <!-- ============================
           Neumorphic Utilities
           ============================ -->
      <section class="mb-20">
        <h2 class="font-title text-3xl text-[--color-contrast] mb-8">Neumorphic Utilities</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="neu-raised p-6">
            <p class="font-bold text-[--color-contrast] mb-1">.neu-raised</p>
            <p class="text-sm text-[--color-muted]">Standard raised card style</p>
          </div>

          <div class="neu-raised-sm p-6">
            <p class="font-bold text-[--color-contrast] mb-1">.neu-raised-sm</p>
            <p class="text-sm text-[--color-muted]">Subtle raised style</p>
          </div>

          <div class="neu-pressed p-6">
            <p class="font-bold text-[--color-contrast] mb-1">.neu-pressed</p>
            <p class="text-sm text-[--color-muted]">Inset/pressed style</p>
          </div>

          <div class="neu-flat p-6">
            <p class="font-bold text-[--color-contrast] mb-1">.neu-flat</p>
            <p class="text-sm text-[--color-muted]">Flat with subtle border</p>
          </div>

          <div class="neu-button p-6">
            <p class="font-bold text-[--color-contrast] mb-1">.neu-button</p>
            <p class="text-sm text-[--color-muted]">Hover for lift effect, click for press</p>
          </div>
        </div>
      </section>

      <!-- ============================
           Buttons
           ============================ -->
      <section class="mb-20">
        <h2 class="font-title text-3xl text-[--color-contrast] mb-8">Buttons</h2>

        <div class="space-y-8">
          <div>
            <p class="text-sm text-[--color-muted] mb-4">Primary variant</p>
            <div class="flex flex-wrap gap-4 items-center">
              <Button size="sm">Small</Button>
              <Button size="md">Medium</Button>
              <Button size="lg">Large</Button>
            </div>
          </div>

          <div>
            <p class="text-sm text-[--color-muted] mb-4">Secondary variant</p>
            <div class="flex flex-wrap gap-4 items-center">
              <Button variant="secondary" size="sm">Small</Button>
              <Button variant="secondary" size="md">Medium</Button>
              <Button variant="secondary" size="lg">Large</Button>
            </div>
          </div>

          <div>
            <p class="text-sm text-[--color-muted] mb-4">As links</p>
            <div class="flex flex-wrap gap-4 items-center">
              <Button href="#">Primary Link</Button>
              <Button variant="secondary" href="#">Secondary Link</Button>
            </div>
          </div>
        </div>
      </section>

      <!-- ============================
           Cards
           ============================ -->
      <section class="mb-20">
        <h2 class="font-title text-3xl text-[--color-contrast] mb-8">Cards</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <Card padding="sm">
            <p class="font-bold text-[--color-contrast] mb-1">Small padding</p>
            <p class="text-sm text-[--color-muted]">padding="sm"</p>
          </Card>

          <Card padding="md">
            <p class="font-bold text-[--color-contrast] mb-1">Medium padding</p>
            <p class="text-sm text-[--color-muted]">padding="md" (default)</p>
          </Card>

          <Card padding="lg">
            <p class="font-bold text-[--color-contrast] mb-1">Large padding</p>
            <p class="text-sm text-[--color-muted]">padding="lg"</p>
          </Card>
        </div>
      </section>

      <!-- ============================
           Section Headings
           ============================ -->
      <section class="mb-20">
        <h2 class="font-title text-3xl text-[--color-contrast] mb-8">Section Headings</h2>

        <div class="space-y-12 neu-flat p-8">
          <SectionHeading title="Centered Heading" />

          <SectionHeading
            title="With Annotation"
            annotation="a little handwritten note"
          />

          <SectionHeading
            title="Left Aligned"
            annotation="for content sections"
            align="left"
          />
        </div>
      </section>

      <!-- ============================
           Icons
           ============================ -->
      <section class="mb-20">
        <h2 class="font-title text-3xl text-[--color-contrast] mb-8">Icons</h2>

        <div class="flex flex-wrap gap-8 items-end">
          <div class="text-center">
            <Icon name="shield" size={32} class="text-[--color-contrast] mx-auto mb-2" />
            <p class="text-sm text-[--color-muted]">shield</p>
          </div>

          <div class="text-center">
            <Icon name="check" size={32} class="text-[--color-contrast] mx-auto mb-2" />
            <p class="text-sm text-[--color-muted]">check</p>
          </div>

          <div class="text-center">
            <Icon name="moon" size={32} class="text-[--color-contrast] mx-auto mb-2" />
            <p class="text-sm text-[--color-muted]">moon</p>
          </div>

          <div class="text-center">
            <Icon name="palette" size={32} class="text-[--color-contrast] mx-auto mb-2" />
            <p class="text-sm text-[--color-muted]">palette</p>
          </div>
        </div>

        <div class="flex flex-wrap gap-6 items-end mt-8">
          <div class="text-center">
            <Icon name="shield" size={16} class="text-[--color-highlight] mx-auto mb-2" />
            <p class="text-xs text-[--color-muted]">16px</p>
          </div>
          <div class="text-center">
            <Icon name="shield" size={24} class="text-[--color-highlight] mx-auto mb-2" />
            <p class="text-xs text-[--color-muted]">24px</p>
          </div>
          <div class="text-center">
            <Icon name="shield" size={32} class="text-[--color-highlight] mx-auto mb-2" />
            <p class="text-xs text-[--color-muted]">32px</p>
          </div>
          <div class="text-center">
            <Icon name="shield" size={48} class="text-[--color-highlight] mx-auto mb-2" />
            <p class="text-xs text-[--color-muted]">48px</p>
          </div>
        </div>
      </section>

      <!-- ============================
           App Store Badges
           ============================ -->
      <section class="mb-20">
        <h2 class="font-title text-3xl text-[--color-contrast] mb-8">App Store Badges</h2>

        <div class="flex flex-wrap gap-4">
          <AppStoreBadge store="apple" href="#" />
          <AppStoreBadge store="google" href="#" />
        </div>
      </section>

      <!-- ============================
           Typography
           ============================ -->
      <section class="mb-20">
        <h2 class="font-title text-3xl text-[--color-contrast] mb-8">Typography</h2>

        <div class="space-y-6">
          <div>
            <p class="text-xs text-[--color-muted] mb-1">Peddana — Titles</p>
            <p class="font-title text-6xl text-[--color-contrast] leading-tight">The quick brown fox</p>
          </div>

          <div>
            <p class="text-xs text-[--color-muted] mb-1">Caveat — Handwritten</p>
            <p class="font-handwritten text-3xl text-[--color-contrast]">The quick brown fox jumps over the lazy dog</p>
          </div>

          <div>
            <p class="text-xs text-[--color-muted] mb-1">Lato — Body</p>
            <p class="font-body text-base text-[--color-black]">The quick brown fox jumps over the lazy dog. A quiet place for the people you know. Just names, notes, and nothing else.</p>
          </div>

          <div>
            <p class="text-xs text-[--color-muted] mb-1">Lato Bold</p>
            <p class="font-body text-base font-bold text-[--color-black]">The quick brown fox jumps over the lazy dog.</p>
          </div>
        </div>
      </section>

      <!-- ============================
           Color Palette
           ============================ -->
      <section class="mb-20">
        <h2 class="font-title text-3xl text-[--color-contrast] mb-8">Color Palette — Morning Window</h2>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div>
            <div class="h-20 rounded-xl bg-[--color-bg-primary] border border-black/10 mb-2"></div>
            <p class="text-sm font-bold text-[--color-contrast]">Background</p>
            <p class="text-xs text-[--color-muted]">#FFF8F0</p>
          </div>

          <div>
            <div class="h-20 rounded-xl bg-[--color-bg-secondary] mb-2"></div>
            <p class="text-sm font-bold text-[--color-contrast]">Secondary</p>
            <p class="text-xs text-[--color-muted]">#A1A69F</p>
          </div>

          <div>
            <div class="h-20 rounded-xl bg-[--color-contrast] mb-2"></div>
            <p class="text-sm font-bold text-[--color-contrast]">Contrast</p>
            <p class="text-xs text-[--color-muted]">#2E4A3A</p>
          </div>

          <div>
            <div class="h-20 rounded-xl bg-[--color-highlight] mb-2"></div>
            <p class="text-sm font-bold text-[--color-contrast]">Highlight</p>
            <p class="text-xs text-[--color-muted]">#8B4926</p>
          </div>

          <div>
            <div class="h-20 rounded-xl bg-[--color-muted] mb-2"></div>
            <p class="text-sm font-bold text-[--color-contrast]">Muted</p>
            <p class="text-xs text-[--color-muted]">#7A6B5A</p>
          </div>

          <div>
            <div class="h-20 rounded-xl bg-[--color-white] border border-black/10 mb-2"></div>
            <p class="text-sm font-bold text-[--color-contrast]">White</p>
            <p class="text-xs text-[--color-muted]">#FFFFFF</p>
          </div>

          <div>
            <div class="h-20 rounded-xl bg-[--color-black] mb-2"></div>
            <p class="text-sm font-bold text-[--color-contrast]">Black</p>
            <p class="text-xs text-[--color-muted]">#1E1E1E</p>
          </div>
        </div>
      </section>

      <!-- ============================
           Combined Example
           ============================ -->
      <section class="mb-20">
        <SectionHeading
          title="Feature Card Example"
          annotation="how it'll look on the landing page"
        />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-2xl mx-auto">
          <Card>
            <div class="text-center">
              <Icon name="shield" size={40} class="text-[--color-highlight] mx-auto mb-4" />
              <h3 class="font-title text-2xl text-[--color-contrast] mb-2">Truly private</h3>
              <p class="text-[--color-muted] text-sm">Nothing leaves your phone. No accounts. No cloud. No sync.</p>
            </div>
          </Card>

          <Card>
            <div class="text-center">
              <Icon name="check" size={40} class="text-[--color-highlight] mx-auto mb-4" />
              <h3 class="font-title text-2xl text-[--color-contrast] mb-2">Just one thing</h3>
              <p class="text-[--color-muted] text-sm">Add people. Write notes. That's it. No features to learn.</p>
            </div>
          </Card>

          <Card>
            <div class="text-center">
              <Icon name="moon" size={40} class="text-[--color-highlight] mx-auto mb-4" />
              <h3 class="font-title text-2xl text-[--color-contrast] mb-2">No demands</h3>
              <p class="text-[--color-muted] text-sm">No streaks. No reminders. No notifications. No guilt.</p>
            </div>
          </Card>

          <Card>
            <div class="text-center">
              <Icon name="palette" size={40} class="text-[--color-highlight] mx-auto mb-4" />
              <h3 class="font-title text-2xl text-[--color-contrast] mb-2">Make it yours</h3>
              <p class="text-[--color-muted] text-sm">Choose a palette that feels like you.</p>
            </div>
          </Card>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>
