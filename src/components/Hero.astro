---
import AppStoreBadge from "./AppStoreBadge.astro";
---

<section class="relative pt-16 md:pt-20 px-6">
  <div class="relative text-center w-full max-w-4xl mx-auto flex flex-col gap-12">
    <!-- Card 1: Branding -->
    <div class="bg-[--color-bg-primary]/80 backdrop-blur-sm rounded-3xl px-10 py-24 md:py-28 border border-white/40">
      <div class="flex items-center justify-center gap-5 md:gap-6">
        <img src="/images/app-icon.png" alt="" class="w-20 h-20 md:w-28 md:h-28 rounded-[22%] shrink-0" aria-hidden="true" />
        <h1 class="text-center">
          <span class="font-handwritten text-6xl md:text-8xl text-[--color-contrast] block leading-none">
            Small Talk
          </span>
          <span class="font-title text-4xl md:text-6xl text-[--color-muted] block -mt-1">
            notebook
          </span>
        </h1>
      </div>
    </div>

    <!-- Card 2: Tagline + badges -->
    <div class="bg-[--color-bg-primary]/80 backdrop-blur-sm rounded-3xl px-10 py-10 border border-white/40">
      <p class="font-handwritten text-2xl md:text-3xl text-[--color-muted] mb-4 leading-relaxed">
        Remember what matters about the people who matter.
      </p>

      <p class="text-base text-[--color-muted] mb-10 opacity-80">
        Private, simple, and secure.
      </p>

      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <AppStoreBadge store="apple" href="#" />
        <AppStoreBadge store="google" href="#" />
      </div>
    </div>
  </div>
</section>
