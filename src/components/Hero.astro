---
import AppStoreBadge from "./AppStoreBadge.astro";
---

<section class="relative min-h-[85vh] flex items-center justify-center px-6 py-24 overflow-hidden">
  <!-- Decorative background circles -->
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <div class="absolute -top-32 -right-32 w-96 h-96 rounded-full bg-[--color-bg-secondary] opacity-[0.07]"></div>
    <div class="absolute -bottom-24 -left-24 w-72 h-72 rounded-full bg-[--color-highlight] opacity-[0.05]"></div>
    <div class="absolute top-1/3 left-1/4 w-48 h-48 rounded-full bg-[--color-contrast] opacity-[0.03]"></div>
  </div>

  <div class="relative text-center max-w-2xl mx-auto">
    <!-- Branding -->
    <div class="flex items-center justify-center gap-5 md:gap-6 mb-6">
      <img src="/images/app-icon.png" alt="" class="w-20 h-20 md:w-28 md:h-28 rounded-[22%] shrink-0" aria-hidden="true" />
      <h1 class="text-center">
        <span class="font-handwritten text-6xl md:text-8xl text-[--color-contrast] block leading-none">
          Small Talk
        </span>
        <span class="font-title text-4xl md:text-6xl text-[--color-muted] block -mt-1">
          notebook
        </span>
      </h1>
    </div>

    <!-- Tagline -->
    <p class="text-xl md:text-2xl text-[--color-muted] mb-4 leading-relaxed">
      A quiet place for the people you know.
    </p>

    <!-- Subtitle -->
    <p class="text-base text-[--color-muted] mb-10 opacity-80">
      Just names, notes, and nothing else.
    </p>

    <!-- Anti-feature callout -->
    <div class="neu-pressed inline-block px-8 py-5 mb-12">
      <p class="text-sm text-[--color-muted] leading-relaxed">
        No accounts. No tracking. No servers.<br />
        No streaks. No reminders. No guilt.<br />
        <span class="text-[--color-contrast] font-medium">Just names, notes, and quiet.</span>
      </p>
    </div>

    <!-- App Store Badges -->
    <div class="flex flex-col sm:flex-row justify-center gap-4 mb-8">
      <AppStoreBadge store="apple" href="#" />
      <AppStoreBadge store="google" href="#" />
    </div>
  </div>
</section>
