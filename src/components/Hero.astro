---
import AppStoreBadge from "./AppStoreBadge.astro";
---

<section class="relative pt-4 md:pt-6 px-6">
  <div class="relative text-center w-full max-w-4xl mx-auto flex flex-col gap-12">
    <!-- Card: Branding + Tagline + badges -->
    <div class="bg-[#FFFCF8]/40 backdrop-blur-md backdrop-saturate-150 rounded-3xl px-10 py-16 md:py-20 border border-white/40 flex flex-col items-center gap-10">
      <div class="neu-raised inline-block px-10 py-8">
        <div class="flex items-center justify-center gap-5 md:gap-6">
          <img src="/images/app-icon.png" alt="" class="w-20 h-20 md:w-28 md:h-28 rounded-[22%] shrink-0" aria-hidden="true" />
          <h1 class="text-center">
            <span class="font-handwritten text-6xl md:text-8xl text-[--color-contrast] block leading-none">
              Small Talk
            </span>
            <span class="font-title text-4xl md:text-6xl text-[--color-muted] block -mt-1">
              notebook
            </span>
          </h1>
        </div>
      </div>

      <p class="text-4xl md:text-5xl font-normal text-[--color-contrast] leading-tight" style="font-family: 'Cormorant Garamond', serif;">
        Remember the little things about the people who matter.
      </p>

      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <AppStoreBadge store="apple" href="https://apps.apple.com/us/app/small-talk-notebook/id6759179661" />
        <AppStoreBadge store="google" comingSoon />
      </div>
    </div>
  </div>
</section>
