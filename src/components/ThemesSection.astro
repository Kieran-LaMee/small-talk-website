---
import SectionHeading from "./SectionHeading.astro";

const themes = [
  {
    name: "Morning Light",
    colors: ["#FFF8F0", "#96A78E", "#2E4A3A", "#8B4926", "#7A6B5A"],
    free: true,
  },
  {
    name: "High Contrast",
    colors: ["#FFFFFF", "#2F72DE", "#000000", "#8B3E00", "#3D3D3D"],
    free: true,
  },
  {
    name: "Nautical",
    colors: ["#F5F3EE", "#6B8EA6", "#1E3A5F", "#D4694A", "#6B7A85"],
    free: true,
  },
  {
    name: "Late Afternoon",
    colors: ["#F5F0EB", "#BDB5B0", "#3A2B3F", "#D4753A", "#7D6F74"],
    free: false,
  },
  {
    name: "Potted Fern",
    colors: ["#F0F5ED", "#8BA888", "#243D2C", "#B89653", "#5F6E5D"],
    free: false,
  },
  {
    name: "Rosewood",
    colors: ["#FFF0EE", "#C4908A", "#3D2228", "#B85A48", "#8A7070"],
    free: false,
  },
  {
    name: "Sandstone",
    colors: ["#F5EDE4", "#C4A882", "#3A2518", "#C4663A", "#8A7A68"],
    free: false,
  },
  {
    name: "Lavender Field",
    colors: ["#F5F0F8", "#A896B8", "#2E1E40", "#8B6AAE", "#7A7082"],
    free: false,
  },
  {
    name: "Evening At Home",
    colors: ["#1E2530", "#3D4E5C", "#E8DDD0", "#D4885A", "#7A8894"],
    free: false,
  },
  {
    name: "Grayscale",
    colors: ["#1E1E1E", "#3A3A3A", "#E8E8E8", "#9A9A9A", "#787878"],
    free: false,
  },
  {
    name: "Arcade",
    colors: ["#0D0D0D", "#1A1A2E", "#FF3CA0", "#FFE642", "#5A5A6E"],
    free: false,
  },
  {
    name: "Deep Woods",
    colors: ["#1A2E22", "#2E4A3A", "#F0E6D8", "#C47A52", "#7A8E80"],
    free: false,
  },
  {
    name: "Library",
    colors: ["#1E1612", "#3D2E24", "#E8DCC8", "#B87333", "#8A7A6A"],
    free: false,
  },
];
---

<section id="themes" class="px-6 scroll-animate">
  <div class="max-w-4xl mx-auto bg-[--color-bg-primary]/80 backdrop-blur-sm rounded-3xl px-8 md:px-10 py-10 border border-white/40">
    <SectionHeading title="Themes" />

    <div class="overflow-x-auto -mx-8 md:-mx-10 px-8 md:px-10 pb-2 scrollbar-hide">
      <div class="flex gap-4" style="min-width: max-content;">
        {themes.map((theme) => (
          <div class="neu-raised-sm p-4 text-center shrink-0 w-44">
            <div class="flex justify-center gap-1.5 mb-3">
              {theme.colors.map((color) => (
                <div
                  class="w-5 h-5 rounded-full border border-black/5"
                  style={`background-color: ${color};`}
                />
              ))}
            </div>
            <p class="font-body text-sm text-[--color-contrast]">
              {theme.name}
            </p>
            {theme.free && (
              <p class="text-[9px] text-[--color-muted] mt-1 uppercase tracking-wider">Included free</p>
            )}
          </div>
        ))}
      </div>
    </div>

    <p class="text-center text-xs text-[--color-muted] mt-8 opacity-70">
      Three themes free. Unlock all themes with a one-time purchase.
    </p>
  </div>
</section>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
