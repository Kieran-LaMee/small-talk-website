---
import FeatureCard from "./FeatureCard.astro";
import SectionHeading from "./SectionHeading.astro";
---

<section id="features" class="px-6 scroll-animate">
  <div class="max-w-4xl mx-auto bg-[--color-bg-primary]/80 backdrop-blur-sm rounded-3xl px-8 md:px-10 py-10 border border-white/40">
    <SectionHeading title="Features" />

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 md:gap-8">
      <FeatureCard
        icon="check"
        title="Simple"
        description="Add people, jot notes, and never forget the details."
      />
      <FeatureCard
        icon="shield"
        title="Private"
        description="No accounts, no tracking, no servers."
      />
      <FeatureCard
        icon="moon"
        title="Quiet"
        description="No streaks, no likes, no feed. <em>No stress.</em>"
      />
      <FeatureCard
        icon="zap"
        title="Quick"
        description="Add someone new in seconds. Fill in the rest whenever."
      />
    </div>
  </div>
</section>
