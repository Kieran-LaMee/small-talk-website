---
interface Props {
  store: "apple" | "google";
  href?: string;
}

const { store, href = "#" } = Astro.props;

const labels = {
  apple: { prefix: "Download on the", name: "App Store" },
  google: { prefix: "Get it on", name: "Google Play" },
};

const label = labels[store];
---

<a
  href={href}
  class="neu-button inline-flex items-center gap-3 px-5 py-3 rounded-xl text-[--color-contrast] hover:no-underline"
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`${label.prefix} ${label.name}`}
>
  {store === "apple" ? (
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="24" viewBox="0 0 814 1000" aria-hidden="true">
      <path fill="currentColor" d="M788.1 340.9c-5.8 4.5-108.2 62.2-108.2 190.5 0 148.4 130.3 200.9 134.2 202.2-.6 3.2-20.7 71.9-68.7 141.9-42.8 61.6-87.5 123.1-155.5 123.1s-85.5-39.5-164-39.5c-76.5 0-103.7 40.8-165.9 40.8s-105.6-57.8-155.5-127.4c-58.3-81.8-105.4-209.7-105.4-330.9 0-194.8 126.7-298.2 251.4-298.2 66.2 0 121.3 43.4 162.8 43.4 39.5 0 101.1-46 176.3-46 28.5 0 130.9 2.6 198.3 99.2zm-234-181.5c31.1-36.9 53.1-88.1 53.1-139.3 0-7.1-.6-14.3-1.9-20.1-50.6 1.9-110.8 33.7-147.1 75.8-28.5 32.4-55.1 83.6-55.1 135.5 0 7.8.7 15.6 1.3 18.2 2.6.5 6.4.6 10.2.6 45.9.1 101-30.4 139.5-70.7z"/>
    </svg>
  ) : (
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="22" viewBox="0 0 505 575" aria-hidden="true">
      <path fill="currentColor" d="M0 516.6V58.4c0-2.3.8-4.3 2.4-6L265.4 287.5 2.4 522.6C.8 520.9 0 518.9 0 516.6zm35.2 41.4L330 297.5l55.8 51.3L49.2 568.2c-3.5 2-7 2.1-10.5.3L35.2 558zm0-533L38.7 16c3.5-1.8 7-1.7 10.5.3l336.6 219.4L330 277.5 35.2 17zm396 298.8L490 287.5l-58.8 36.3-45.4-41.8 45.4-41.8z"/>
    </svg>
  )}
  <div class="flex flex-col leading-tight">
    <span class="text-xs opacity-70">{label.prefix}</span>
    <span class="text-base font-bold">{label.name}</span>
  </div>
</a>
