---
import PhoneMockup from "./PhoneMockup.astro";
import SectionHeading from "./SectionHeading.astro";

const screenshots = [
  {
    src: "/images/screenshot-splash.png",
    alt: "Small Talk Notebook intro screen",
  },
  {
    src: "/images/screenshot-person-detail.png",
    alt: "Person details view showing name, birthday, location, and linked people",
  },
  {
    src: "/images/screenshot-notes.png",
    alt: "Notes view with calendar and conversation entries",
  },
  {
    src: "/images/screenshot-themes.png",
    alt: "Color theme picker with seven palette options",
  },
];
---

<section id="preview" class="py-20 md:py-28 scroll-animate">
  <div class="max-w-4xl mx-auto px-6">
    <SectionHeading title="Preview" annotation="a quiet look" />

    <!-- Caption -->
    <div class="text-center mb-12">
      <p class="font-handwritten text-2xl text-[--color-contrast] mb-3">
        The details that matter.
      </p>
      <p class="text-[--color-muted] text-sm leading-relaxed max-w-md mx-auto">
        Birthdays. Favorite drinks. The name of their dog.
        The small things that show you care.
      </p>
    </div>
  </div>

  <!-- Horizontal scroll -->
  <div class="overflow-x-auto pb-6 scrollbar-hide">
    <div class="flex gap-8 md:gap-10 px-6 w-max mx-auto">
      {screenshots.map((shot) => (
        <PhoneMockup>
          <img
            src={shot.src}
            alt={shot.alt}
            class="w-full h-full object-cover object-top"
            loading="lazy"
          />
        </PhoneMockup>
      ))}
    </div>
  </div>

  <div class="max-w-4xl mx-auto px-6">
    <p class="text-center text-[--color-muted] text-xs mt-8 opacity-60">
      Everything you need is free. Unlock extra themes and export with a one-time purchase.
    </p>
  </div>
</section>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
