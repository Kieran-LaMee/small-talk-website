---
interface Props {
  padding?: "sm" | "md" | "lg";
  class?: string;
}

const {
  padding = "md",
  class: className = "",
} = Astro.props;

const paddingClasses = {
  sm: "p-4",
  md: "p-6",
  lg: "p-8",
};

const classes = [
  "neu-raised",
  paddingClasses[padding],
  className,
].join(" ");
---

<div class={classes}>
  <slot />
</div>
